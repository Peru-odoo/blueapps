                   title="Previous">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#recipeCarousel" data-slide="next" role="img" aria-label="Next"
                   title="Next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
    </template>
    <template id="snippet_recipe_bar" inherit_id="website.snippets" name="Recipe">
        <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
            <t t-snippet="theme_sync_ar_restaurant.snippet_recipe"
               t-thumbnail="/theme_sync_ar_restaurant/static/src/images/recipe_icon.png"/>
        </xpath>
    </template>
